@model IList<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pcoded-content">
    <!-- [ breadcrumb ] start -->
    <div class="page-header card">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <i class="feather icon-clipboard bg-c-blue"></i>
                    <div class="d-inline">
                        <h5>Role Management</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class=" breadcrumb breadcrumb-title">
                        <li class="breadcrumb-item">
                            <a href="index.html"><i class="feather icon-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Role-List</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- [ breadcrumb ] end -->

    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Individual Column Searching (Text Inputs) start -->
                            <div class="card">

                                <div class="card-header">
                                    <h5>Roles</h5>
                                    <a asp-controller="Account" asp-action="AddRole" class="btn btn-dark btn-sm"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add Role</a>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="tblRole" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Name</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>1</td>
                                                        <td>@item.Name</td>
                                                        <td>
                                                            <a asp-action="GetListingDetails" asp-controller="Listing" asp-route-roleId="@item.Id">
                                                                <i class="far fa-eye mr-1" aria-hidden="true"></i>View
                                                            </a>
                                                            <a asp-action="SaveListing" asp-controller="Listing" asp-route-roleId="@item.Id">
                                                                <i class="fa fa-pencil mr-1" aria-hidden="true"></i>Edit
                                                            </a>
                                                            <a asp-action="GetRolePermission" asp-controller="Account" asp-route-roleId="@item.Id">
                                                                <i class="fa fa-pencil mr-1" aria-hidden="true"></i>Manage
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Name</th>
                                                    <th>Action</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- Individual Column Searching (Text Inputs) end -->
                        </div>
                    </div>
                </div>
                <!-- Page body end -->
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblRole tfoot th').each(function () {
                var title = $(this).text();
                $(this).html('<input type="text" class="form-control" placeholder="Search ' + title + '" />');
            });

            // DataTable
            var table = $('#tblRole').DataTable();

            // Apply the search
            table.columns().every(function () {
                var that = this;

                $('input', this.footer()).on('keyup change', function () {
                    if (that.search() !== this.value) {
                        that
                            .search(this.value)
                            .draw();
                    }
                });
            });
        });
    </script>
    <partial name="_datatableJs" />
}
