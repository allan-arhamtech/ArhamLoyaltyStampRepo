@model ArhamTechnosoftLoyalty.Models.ViewModel.Company.CompanyViewModel

@{
    ViewData["Title"] = "SaveCompany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pcoded-content">
    <!-- [ breadcrumb ] start -->
    <div class="page-header card">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <i class="feather icon-clipboard bg-c-blue"></i>
                    <div class="d-inline">
                        <h5>Add Company</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class=" breadcrumb breadcrumb-title">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="Home"><i class="feather icon-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="GetCompanies" asp-controller="Company">Company-List</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="SaveCompany" asp-controller="Company" asp-route-companyId="@Model.companyMaster.CompanyId">Add-Company</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- [ breadcrumb ] end -->

    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Form start -->
                            <form id="frmCompany" method="post" asp-action="SaveCompany" asp-controller="Company" novalidate>
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Company</h5>
                                    </div>
                                    <div class="card-block">
                                        <div class="form-group row">
                                            <div class="col-sm-3">
                                                <label class="col-form-label">Company Name</label>
                                                <input type="text" class="form-control" id="txtCompanyName" placeholder="Company Name" asp-for="companyMaster.CompanyName" name="companyMaster.CompanyName">
                                                <span asp-validation-for="companyMaster.CompanyName" class="messages text-danger"></span>
                                            </div>
                                            <div class="col-sm-3">
                                                <label class="col-form-label">E-mail</label>
                                                <input type="text" class="form-control" id="txtCompanyEmail" placeholder="E-Mail" asp-for="companyMaster.CompanyMail.EmailAddress" name="companyMaster.CompanyMail.EmailAddress">
                                                <span asp-validation-for="companyMaster.CompanyMail.EmailAddress" class="messages text-danger"></span>
                                            </div>
                                            <div class="col-sm-3">
                                                <label class="col-form-label">Phone No.</label>
                                                <input type="tel" class="form-control" id="txtCompanyPhone" placeholder="Phone No." asp-for="companyMaster.CompanyPhone.PhoneNo" name="companyMaster.CompanyPhone.PhoneNo">
                                                <span asp-validation-for="companyMaster.CompanyPhone.PhoneNo" class="messages text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Address</h5>
                                    </div>
                                    <div class="card-block">
                                        <div class="form-group row">
                                            <div class="col-sm-6">
                                                <label class="col-form-label">Address Line 1</label>
                                                <input type="text" class="form-control" id="txtAddressLine1" placeholder="Address Line 1" asp-for="companyMaster.CompanyAddress.AddressLine1" name="companyMaster.CompanyAddress.AddressLine1">
                                                <span asp-validation-for="companyMaster.CompanyAddress.AddressLine1" class="messages text-danger"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="col-form-label">Address Line 2</label>
                                                <input type="text" class="form-control" asp-for="companyMaster.CompanyAddress.AddressLine2" name="companyMaster.CompanyAddress.AddressLine2" id="txtAddressLine2" placeholder="Address Line 2">
                                                <span class="messages"></span>
                                            </div>
                                            <div class="col-sm-3">
                                                <label class="col-form-label">Country</label>
                                                <select class="js-example-basic-single col-sm-12" asp-items="@(new SelectList(Model.masters.country,"id","name"))" asp-for="companyMaster.CompanyAddress.CountryId" name="companyMaster.CompanyAddress.CountryId" id="ddlCountry">
                                                    <option selected disabled>Select</option>
                                                </select>
                                                <span class="messages text-danger" asp-validation-for="companyMaster.CompanyAddress.CountryId"></span>
                                            </div>
                                            @if (Model != null && Model.masters.state != null)
                                            {
                                                <div class="col-sm-3">
                                                    <label class="col-form-label">State</label>
                                                    <select class="js-example-basic-single col-sm-12" asp-items="@(new SelectList(Model.masters.state,"id","name"))" asp-for="companyMaster.CompanyAddress.StateId" name="companyMaster.CompanyAddress.StateId" id="ddlState">
                                                        <option disabled selected>Select</option>
                                                    </select>
                                                    <span class="messages text-danger" asp-validation-for="companyMaster.CompanyAddress.StateId"></span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="col-sm-3">
                                                    <label class="col-form-label">State</label>
                                                    <select class="js-example-basic-single col-sm-12" asp-for="companyMaster.CompanyAddress.StateId" name="companyMaster.CompanyAddress.StateId" id="ddlState">
                                                        <option disabled selected>Select</option>
                                                    </select>
                                                    <span class="messages text-danger" asp-validation-for="companyMaster.CompanyAddress.StateId"></span>
                                                </div>
                                            }
                                            @if (Model != null && Model.masters.city != null)
                                            {
                                                <div class="col-sm-3">
                                                    <label class="col-form-label">City</label>
                                                    <select class="js-example-basic-single col-sm-12" asp-items="@(new SelectList(Model.masters.city,"id","name"))" asp-for="companyMaster.CompanyAddress.CityId" name="companyMaster.CompanyAddress.CityId" id="ddlCity">
                                                        <option disabled selected>Select</option>
                                                    </select>
                                                    <span class="messages text-danger" asp-validation-for="companyMaster.CompanyAddress.CityId"></span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="col-sm-3">
                                                    <label class="col-form-label">City</label>
                                                    <select class="js-example-basic-single col-sm-12" asp-for="companyMaster.CompanyAddress.CityId" name="companyMaster.CompanyAddress.CityId" id="ddlCity">
                                                        <option disabled selected>Select</option>
                                                    </select>
                                                    <span class="messages text-danger" asp-validation-for="companyMaster.CompanyAddress.CityId"></span>
                                                </div>
                                            }
                                        </div>
                                        @*IS active hien field*@
                                        @*<input type="hidden" asp-for="companyMaster.IsActive" name="companyMaster.IsActive" value="0"/>*@
                                        <input type="hidden" asp-for="companyMaster.CompanyAddress.Id" name="companyMaster.CompanyAddress.Id"/>
                                        <input type="hidden" asp-for="companyMaster.CompanyPhone.Id" name="companyMaster.CompanyPhone.Id"/>
                                        <input type="hidden" asp-for="companyMaster.CompanyMail.Id" name="companyMaster.CompanyMail.Id"/>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                <button type="submit" class="btn btn-success m-b-0">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- Form end -->
                        </div>
                    </div>
                </div>
                <!-- Page body end -->
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        setTimeout(function () {
            $(document).ready(function () {
                $(".js-example-basic-single").select2();

                $("#ddlCountry").change(function () {
                    $.getJSON("/GenericMvc/GetChildDropdown", { id: $(this).val(), master: 'state' }, function (d) {
                        var row = null;
                        $("#ddlState").empty();
                        row += "<option selected disabled>" + "Select" + "</option>"
                        $.each(d, function (i, v) {
                            row += "<option value=" + v.id + ">" + v.name + "</option>"
                        });
                        $("#ddlState").html(row);
                    });
                });

                $("#ddlState").change(function () {
                    $.getJSON("/GenericMvc/GetChildDropdown", { id: $(this).val(), master: 'city' }, function (d) {
                        var row = null;
                        $("#ddlCity").empty();
                        row += "<option selected disabled>" + "Select" + "</option>"
                        $.each(d, function (i, v) {
                            row += "<option value=" + v.id + ">" + v.name + "</option>"
                        });
                        $("#ddlCity").html(row);
                    });
                });
            })
        }, 350);

    </script>
}



