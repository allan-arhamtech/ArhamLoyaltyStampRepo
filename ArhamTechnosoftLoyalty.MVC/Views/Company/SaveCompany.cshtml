@model ArhamTechnosoftLoyalty.Models.EntityModel.CompanyMaster

@{
    ViewData["Title"] = "SaveCompany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pcoded-content">
    <!-- [ breadcrumb ] start -->
    <div class="page-header card">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <i class="feather icon-clipboard bg-c-blue"></i>
                    <div class="d-inline">
                        <h5>Add Company</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class=" breadcrumb breadcrumb-title">
                        <li class="breadcrumb-item">
                            <a href="index.html"><i class="feather icon-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Company-List</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Add-Company</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- [ breadcrumb ] end -->

    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Form start -->
                            <form id="frmCompany" method="post" asp-action="SaveCompany" asp-controller="Company" novalidate>
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Company</h5>
                                    </div>
                                    <div class="card-block">
                                        <div class="form-group row">
                                            <div class="col-sm-6">
                                                <label class="col-form-label">Company Name</label>
                                                <input type="text" class="form-control" id="txtCompanyName" placeholder="Company Name" asp-for="CompanyName" name="CompanyName">
                                                <span class="messages"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Address</h5>
                                    </div>
                                    <div class="card-block">
                                        <div class="form-group row">
                                            <div class="col-sm-6">
                                                <label class="col-form-label">Address Line 1</label>
                                                <input type="text" class="form-control" id="txtAddressLine1" placeholder="Address Line 1" asp-for="CompanyAddress.AddressLine1" name="CompanyAddress.AddressLine1">
                                                <span class="messages"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="col-form-label">Address Line 2</label>
                                                <input type="text" class="form-control" asp-for="CompanyAddress.AddressLine2" name="CompanyAddress.AddressLine2" id="txtAddressLine2" placeholder="Address Line 2">
                                                <span class="messages"></span>
                                            </div>
                                            <div class="col-sm-3">
                                                <label class="col-form-label">Country</label>
                                                <select class="js-example-basic-single col-sm-12" asp-for="CompanyAddress.CountryId" name="CompanyAddress.CountryId" id="ddlCountry">
                                                    <option value="1">Alabama</option>
                                                    <option value="2">Wyoming</option>
                                                    <option value="3">Coming</option>
                                                    <option value="4">Hanry Die</option>
                                                    <option value="5">John Doe</option>
                                                </select>
                                            </div>
                                            <div class="col-sm-3">
                                                <label class="col-form-label">State</label>
                                                <select class="js-example-basic-single col-sm-12" asp-for="CompanyAddress.StateId" name="CompanyAddress.StateId" id="ddlState">
                                                    <option value="1">Alabama</option>
                                                    <option value="2">Wyoming</option>
                                                    <option value="3">Coming</option>
                                                    <option value="4">Hanry Die</option>
                                                    <option value="5">John Doe</option>
                                                </select>
                                            </div>
                                            <div class="col-sm-3">
                                                <label class="col-form-label">City</label>
                                                <select class="js-example-basic-single col-sm-12" asp-for="CompanyAddress.CityId" name="CompanyAddress.CityId" id="ddl.City">
                                                    <option value="1">Alabama</option>
                                                    <option value="2">Wyoming</option>
                                                    <option value="3">Coming</option>
                                                    <option value="4">Hanry Die</option>
                                                    <option value="5">John Doe</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                <button type="submit" class="btn btn-success m-b-0">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- Form end -->
                        </div>
                    </div>
                </div>
                <!-- Page body end -->
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>
    setTimeout(function () {
        $(document).ready(function () {
            $(".js-example-basic-single").select2();
        })
    }, 350);
    
</script>
}



